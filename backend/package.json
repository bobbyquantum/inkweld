{
  "name": "inkweld-backend",
  "version": "0.1.0",
  "description": "Inkweld backend API built with Hono",
  "author": "bobbyquantum",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/bun-runner.ts",
    "dev:node": "node --watch src/node-runner.ts",
    "dev:worker": "wrangler dev",
    "build": "bun build src/bun-runner.ts --outdir dist --target bun",
    "build:node": "bun build src/node-runner.ts --outdir dist --target node",
    "build:binary": "bun build src/bun-runner.ts --no-minify --compile --outfile dist/inkweld",
    "build:binary:full": "bun run scripts/build-binary-full.ts",
    "build:worker": "wrangler deploy --dry-run",
    "generate:frontend-imports": "bun run scripts/generate-frontend-imports.ts",
    "start": "NODE_ENV=production bun dist/bun-runner.js",
    "start:node": "NODE_ENV=production node dist/node-runner.js",
    "test": "NODE_ENV=test bun test --coverage",
    "test:watch": "NODE_ENV=test bun test --watch",
    "test:coverage": "NODE_ENV=test bun test --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate:openapi": "bun run scripts/generate-openapi.ts",
    "generate:angular-client": "bun run scripts/generate-angular-client.ts",
    "admin": "bun run admin-cli.ts",
    "init:d1-local": "bun run scripts/init-d1-local.ts",
    "db:migrate:preview": "wrangler d1 migrations apply inkweld_preview --env preview --remote",
    "db:migrate:prod": "wrangler d1 migrations apply inkweld_prod --env production --remote",
    "wrangler": "wrangler"
  },
  "dependencies": {
    "@fal-ai/client": "^1.8.1",
    "@hono/node-server": "^1.19.7",
    "@hono/node-ws": "^1.2.0",
    "@hono/oauth-providers": "^0.8.5",
    "@hono/standard-validator": "^0.2.1",
    "@hono/zod-openapi": "^1.2.0",
    "@hono/zod-validator": "^0.7.6",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@openrouter/sdk": "^0.3.14",
    "bcryptjs": "^3.0.3",
    "diff-match-patch": "^1.0.5",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "esbuild": "^0.27.2",
    "hono": "^4.11.3",
    "lodash.debounce": "^4.0.8",
    "nanoid": "^5.1.6",
    "openai": "^6.15.0",
    "sharp": "^0.34.5",
    "tiny-lru": "^11.4.5",
    "ws": "^8.18.3",
    "y-durableobjects": "^1.0.5",
    "y-leveldb": "^0.2.0",
    "y-protocols": "^1.0.7",
    "y-websocket": "^3.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260103.0",
    "@openapitools/openapi-generator-cli": "^2.27.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "1.3.6",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "wrangler": "^4.54.0"
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.5.0"
  },
  "packageManager": "bun@1.3.6"
}
