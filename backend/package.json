{
  "name": "inkweld-backend",
  "version": "0.1.0",
  "description": "Inkweld backend API built with Hono",
  "author": "bobbyquantum",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "NODE_ENV=production bun dist/index.js",
    "test": "NODE_ENV=test bun test",
    "test:watch": "NODE_ENV=test bun test --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate:openapi": "bun run scripts/generate-openapi.ts",
    "admin": "bun run admin-cli.ts",
    "wrangler:dev": "wrangler dev",
    "wrangler:deploy": "wrangler deploy",
    "wrangler:deploy:prod": "wrangler deploy --env production",
    "wrangler:tail": "wrangler tail"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/node-ws": "^1.2.0",
    "@hono/oauth-providers": "^0.8.5",
    "@hono/standard-validator": "^0.1.5",
    "@hono/zod-validator": "^0.7.4",
    "@modelcontextprotocol/sdk": "^1.21.0",
    "@smoores/epub": "^0.1.9",
    "@types/better-sqlite3": "^7.6.13",
    "ajv": "^8.17.1",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.4.1",
    "diff-match-patch": "^1.0.5",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.7.12",
    "hono-openapi": "^1.1.1",
    "leveldown": "^6.1.1",
    "lodash.debounce": "^4.0.8",
    "openai": "^6.3.0",
    "sharp": "^0.34.4",
    "tiny-lru": "^11.4.5",
    "ws": "^8.18.3",
    "y-leveldb": "^0.2.0",
    "y-protocols": "^1.0.6",
    "y-websocket": "^3.0.0",
    "zod": "3.25.76",
    "zod-openapi": "4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "^1.3.1",
    "@types/node": "^24.10.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "wrangler": "^4.0.0"
  },
  "packageManager": "bun@1.3.1"
}
