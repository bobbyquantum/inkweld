{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "name": "ğŸ¨ Frontend",
      "request": "launch",
      "preLaunchTask": "Dev Frontend",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/src/*",
        "webpack:///src/*": "${webRoot}/src/*",
        "webpack:///*": "*",
        "/*": "${webRoot}/*"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸš€ Hono Backend",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/backend/**/*.ts"]
    }
  ],
  "compounds": [
    {
      "name": "ğŸŒ Full",
      "configurations": ["ğŸ¨ Frontend", "ğŸš€ Hono Backend"],
      "stopAll": true
    }
  ]
}
