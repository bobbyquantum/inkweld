{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "name": "ğŸ¨ Frontend",
      "request": "launch",
      "preLaunchTask": "ğŸš€ Start Frontend",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/src/*",
        "webpack:///src/*": "${webRoot}/src/*",
        "webpack:///*": "*",
        "/*": "${webRoot}/*"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸš€ NestJS Server",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["run", "bun:dev"],
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/server/**/*.ts"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸš€ DebugTest",
      "runtimeExecutable": "ng",
      "runtimeArgs": [
        "test",
        "--debug",
        "--watch=false",
        "--include=**/document-element-editor.component.spec.ts"
      ],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/frontend/**/*.ts"]
    }
  ],
  "compounds": [
    {
      "name": "ğŸŒ Full",
      "configurations": ["ğŸ¨ Frontend", "ğŸš€ NestJS Server"],
      "stopAll": true
    }
  ]
}
