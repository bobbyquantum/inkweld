{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev Frontend",
      "type": "shell",
      "command": "cd frontend && bun run start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Application bundle generation complete",
          "endsPattern": "Watch mode enabled. Watching for file changes..."
        }
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Dev Backend",
      "type": "shell",
      "command": "cd backend && bun run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Ready on"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Dev Docs",
      "type": "shell",
      "command": "cd docs/site && npm start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Docusaurus website is running"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Test Frontend",
      "type": "shell",
      "command": "npm test",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": {
        "owner": "jest",
        "fileLocation": ["relative", "${workspaceFolder}/frontend"],
        "pattern": {
          "regexp": "^\\s*‚óè\\s+(.*)$",
          "message": 1
        }
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Test Backend",
      "type": "shell",
      "command": "bun test",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": {
        "owner": "bun",
        "fileLocation": ["relative", "${workspaceFolder}/backend"],
        "pattern": {
          "regexp": "^(.+\\.test\\.(?:js|ts|jsx|tsx)):(\\d+):(\\d+): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Lint Fix All",
      "type": "shell",
      "command": "cd frontend && npm run lint:fix && cd ../backend && bun run lint:fix && cd ../docs/site && npm run format",
      "problemMatcher": "$eslint-stylish",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Coverage Frontend",
      "type": "shell",
      "command": "npm test",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "Coverage Backend",
      "type": "shell",
      "command": "bun test --coverage",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "Coverage All",
      "dependsOn": ["Coverage Frontend", "Coverage Backend"],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    }
  ]
}
