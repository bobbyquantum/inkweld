{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev Frontend",
      "type": "shell",
      "command": "cd frontend && bun run start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Application bundle generation complete",
          "endsPattern": "Watch mode enabled. Watching for file changes..."
        }
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Dev Backend",
      "type": "shell",
      "command": "cd backend && bun run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Ready on"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Dev Docs",
      "type": "shell",
      "command": "cd docs/site && npm start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Docusaurus website is running"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Test Frontend",
      "type": "shell",
      "command": "npm test",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": {
        "owner": "jest",
        "fileLocation": ["relative", "${workspaceFolder}/frontend"],
        "pattern": {
          "regexp": "^\\s*●\\s+(.*)$",
          "message": 1
        }
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Test Backend",
      "type": "shell",
      "command": "bun test",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": {
        "owner": "bun",
        "fileLocation": ["relative", "${workspaceFolder}/backend"],
        "pattern": [
          {
            "regexp": "^(.+\\.test\\.(?:js|ts|jsx|tsx)):",
            "file": 1
          },
          {
            "regexp": "^✕ (.+) \\[(\\d+\\.\\d+ms)\\]$",
            "message": 1,
            "severity": 1
          }
        ]
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Lint Fix All",
      "type": "shell",
      "command": "cd frontend && npm run lint:fix && cd ../backend && bun run lint:fix && cd ../docs/site && npm run format",
      "problemMatcher": "$eslint-stylish",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}
