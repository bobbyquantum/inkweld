{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Start Backend",
        "type": "shell",
        "command": "cd backend && ./mvnw spring-boot:run",
        "options": {
          "envFile": "${workspaceFolder}/.env"
        },
        "isBackground": true,
        "problemMatcher": [
          {
            "pattern": [
              {
                "regexp": ".",
                "file": 1,
                "location": 2,
                "message": 3
              }
            ],
            "background": {
              "activeOnStart": true,
              "beginsPattern": "^.*Starting WormApplication.*$",
              "endsPattern": "^.*Started WormApplication.*$"
            }
          }
        ]
      },
      {
        "label": "Start Frontend",
        "type": "shell",
        "command": "cd frontend && npm start",
        "isBackground": true,
        "problemMatcher": [
          {
            "pattern": [
              {
                "regexp": ".",
                "file": 1,
                "location": 2,
                "message": 3
              }
            ],
            "background": {
              "activeOnStart": true,
              "beginsPattern": "^.*Initial chunk files.*$",
              "endsPattern": "^.*Application bundle generation complete.*$"
            }
          }
        ]
      },
      {
        "label": "Start Full Stack",
        "dependsOn": ["Start Backend", "Start Frontend"],
        "dependsOrder": "parallel"
      }
    ]
  }
