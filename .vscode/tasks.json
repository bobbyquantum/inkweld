{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Start Backend",
        "type": "shell",
        "command": "cd backend && source .env && ./mvnw spring-boot:run",
        "isBackground": true,
        "problemMatcher": [
          {
            "pattern": [
              {
                "regexp": ".",
                "file": 1,
                "location": 2,
                "message": 3
              }
            ],
            "background": {
              "activeOnStart": true,
              "beginsPattern": "^.*Starting WormApplication.*$",
              "endsPattern": "^.*Started WormApplication.*$"
            }
          }
        ]
      },
      {
        "label": "Start Frontend",
        "type": "shell",
        "command": "cd frontend && npm start",
        "isBackground": true,
        "problemMatcher": [
          {
            "pattern": [
              {
                "regexp": ".",
                "file": 1,
                "location": 2,
                "message": 3
              }
            ],
            "background": {
              "activeOnStart": true,
              "beginsPattern": "^.*: Compiled successfully.*$",
              "endsPattern": "^.*: Compiled successfully.*$"
            }
          }
        ]
      }
    ]
  }