{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸ³ Start Docker Services",
      "type": "shell",
      "command": "docker compose up -d",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".*"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Creating",
          "endsPattern": "Started"
        }
      }
    },
    {
      "label": "ğŸš€ Start Frontend Dev Server",
      "type": "shell",
      "command": "cd frontend && bun run start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "bundle generation complete"
        }
      }
    },
    {
      "label": "ğŸš€ Start NestJS Server",
      "type": "shell",
