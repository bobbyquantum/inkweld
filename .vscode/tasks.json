{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Frontend",
        "type": "shell",
        "command": "cd frontend && npm start",
        "isBackground": true,
        "problemMatcher": [
          {
            "pattern": [
              {
                "regexp": ".",
                "file": 1,
                "location": 2,
                "message": 3
              }
            ],
            "background": {
              "activeOnStart": true,
              "beginsPattern": "^.*Initial chunk files.*$",
              "endsPattern": "^.*Application bundle generation complete.*$"
            }
          }
        ]
      },
      {
        "label": "Proxy",
        "type": "shell",
        "command": "npm run start-proxy",
        "isBackground": true,
        "problemMatcher": [
          {
            "pattern": [
              {
                "regexp": ".",
                "file": 1,
                "location": 2,
                "message": 3
              }
            ],
            "background": {
              "activeOnStart": true,
            }
          }
        ]
      },
      {
        "label": "Start Stack",
        "dependsOn": ["Frontend", "Proxy"],
        "dependsOrder": "parallel"
      }
    ]
  }
