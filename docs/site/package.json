{
  "name": "docs-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "bun run gen-api-docs && docusaurus start",
    "build": "bun run gen-api-docs && bun run generate-screenshots && docusaurus build",
    "build:no-screenshots": "bun run gen-api-docs && docusaurus build",
    "copy-openapi": "node -e \"require('fs').mkdirSync('static', {recursive: true}); require('fs').copyFileSync('../../backend/openapi.json', 'static/openapi.json')\"",
    "generate-screenshots": "cd ../../frontend && TEST_ENV=screenshots npx playwright test",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,mdx,json,css}\"",
    "gen-api-docs": "bun run copy-openapi && docusaurus gen-api-docs inkweld",
    "clean-api-docs": "docusaurus clean-api-docs inkweld",
    "gen-api-docs:all": "bun run copy-openapi && docusaurus gen-api-docs all"
  },
  "dependencies": {
    "@docusaurus/core": "3.9.2",
    "@docusaurus/preset-classic": "3.9.2",
    "@docusaurus/theme-mermaid": "^3.9.2",
    "@mdx-js/react": "^3.1.1",
    "clsx": "^2.1.1",
    "docusaurus-plugin-openapi-docs": "^4.5.1",
    "docusaurus-theme-openapi-docs": "^4.5.1",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.9.2",
    "@docusaurus/tsconfig": "3.9.2",
    "@docusaurus/types": "3.9.2",
    "baseline-browser-mapping": "^2.9.11",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=20.0"
  },
  "packageManager": "bun@1.3.6"
}
