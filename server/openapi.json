  "info": {
    "title": "Inkweld API",
    "description": "API for managing projects and user data",
    "version": "1.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "User API",
      "description": "The user controller allows accessing and updating details for the current user."
    },
    {
      "name": "Project API",
      "description": "The project controller supports various functions relating to projects."
    }
  ],
  "servers": [],
  "components": {
    "schemas": {
      "ProjectDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "my-project-id"
          },
          "slug": {
            "type": "string",
            "example": "my-project-slug"
          },
          "title": {
            "type": "string",
            "example": "My Awesome Project"
          },
          "description": {
            "type": "string",
            "example": "This is a cool project."
          },
          "username": {
            "type": "string",
            "example": "user-1"
          },
          "createdDate": {
            "format": "date-time",
            "type": "string",
            "example": "2023-01-01T00:00:00.000Z"
          },
          "updatedDate": {
            "format": "date-time",
            "type": "string",
            "example": "2023-01-01T00:00:00.000Z"
          }
        },
        "required": [
          "slug",
          "title",
          "username",
          "createdDate",
          "updatedDate"
        ]
      },
      "ProjectElementDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier of the element",
            "example": "d42200be-2a40-4c3e-9c35-47c8f641c8ea"
          },
          "version": {
            "type": "number",
            "description": "Version for optimistic locking"
          },
          "name": {
            "type": "string",
            "description": "Name of the element",
            "example": "Chapter 1"
          },
          "type": {
            "type": "string",
            "description": "Type of the element (FOLDER/ITEM/IMAGE)",
            "enum": [
              "FOLDER",
              "ITEM"
            ],
            "example": "FOLDER"
          },
          "position": {
            "type": "number",
            "description": "Position for ordering elements",
            "example": 1
          },
          "level": {
            "type": "number",
            "description": "Level in the tree hierarchy",
            "example": 0
          },
          "expandable": {
            "type": "boolean",
            "description": "Whether the element can be expanded (computed from type)"
          },
          "metadata": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "description": "Metadata associated with the project element"
          }
        },
        "required": [
          "id",
          "version",
          "name",
          "type",
          "position",
          "level",
          "expandable",
          "metadata"
        ]
      },
      "FileUploadResponseDto": {
        "type": "object",
        "properties": {
          "originalName": {
            "type": "string",
            "description": "Original filename provided by the user"
          },
          "storedName": {
            "type": "string",
            "description": "System-generated unique name for storage"
          },
          "contentType": {
            "type": "string",
            "description": "Content type/extension of the file"
          },
          "size": {
            "type": "number",
            "description": "Size of the file in bytes"
          },
          "uploadDate": {
            "format": "date-time",
            "type": "string",
            "description": "Date when the file was uploaded"
          },
          "fileUrl": {
            "type": "string",
            "description": "URL to access the file"
          }
        },
        "required": [
          "originalName",
          "storedName",
          "contentType",
          "size",
          "uploadDate",
          "fileUrl"
        ]
      },
      "FileMetadataDto": {
        "type": "object",
        "properties": {
          "originalName": {
            "type": "string",
            "description": "Original filename provided by the user"
          },
          "storedName": {
            "type": "string",
            "description": "System-generated unique name for storage"
          },
          "contentType": {
            "type": "string",
            "description": "Content type/extension of the file"
          },
          "size": {
            "type": "number",
            "description": "Size of the file in bytes"
          },
          "uploadDate": {
            "format": "date-time",
            "type": "string",
            "description": "Date when the file was uploaded"
          }
        },
        "required": [
          "originalName",
          "storedName",
          "contentType",
          "size",
          "uploadDate"
        ]
      },
      "FileDeleteResponseDto": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Status message for the deletion operation"
          }
        },
        "required": [
          "message"
        ]
      },
      "UserDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "johnDoe"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          }
        },
        "required": [
          "username",
          "name"
        ]
      },
      "UserRegisterDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "Username for the new user",
            "example": "johndoe"
          },
          "email": {
            "type": "string",
            "description": "Email address for the new user",
            "example": "john.doe@example.com"
          },
          "password": {
            "type": "string",
            "description": "Password for the new user",
            "example": "StrongPassword123!"
          },
          "name": {
            "type": "string",
            "description": "Optional display name for the user",
            "example": "John Doe"
          }
        },
        "required": [
          "username",
          "password"
        ]
      },
      "LoginRequestDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "johnDoe"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        },
        "required": [
          "username",
          "password"
        ]
      },
      "LoginResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "user-1"
          },
          "username": {
            "type": "string",
            "example": "johnDoe"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "enabled": {
            "type": "boolean",
            "example": true
          },
          "sessionId": {
            "type": "string",
            "example": "12345abcde"
          }
        },
        "required": [
          "id",
          "username",
          "name",
          "enabled",
          "sessionId"
        ]
      },
      "DocumentDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the document",
            "example": "doc1:testuser:project-name"
          },
          "name": {
            "type": "string",
            "description": "The name of the document",
            "example": "My Document"
          },
          "ownerId": {
            "type": "string",
            "description": "The user ID of the document owner",
            "example": "testuser"
          },
          "username": {
            "type": "string",
            "description": "The username part of the document ID",
            "example": "testuser"
          },
          "projectSlug": {
            "type": "string",
            "description": "The project slug part of the document ID",
            "example": "project-name"
          },
          "lastModified": {
            "type": "string",
            "description": "Timestamp when the document was last modified",
            "example": "2025-03-22T10:30:00.000Z"
          }
        },
        "required": [
          "id",
          "name",
          "ownerId",
          "username",
          "projectSlug",
          "lastModified"
        ]
      }
    }
  }
