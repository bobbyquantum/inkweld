{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "inkweld-frontend": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/inkweld-frontend",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              },
              {
                "glob": "CHANGELOG.md",
                "input": "../",
                "output": "./assets"
              },
              {
                "glob": "typst_ts_renderer_bg.wasm",
                "input": "node_modules/@myriaddreamin/typst-ts-renderer/pkg",
                "output": "assets/wasm"
              },
              {
                "glob": "typst_ts_web_compiler_bg.wasm",
                "input": "node_modules/@myriaddreamin/typst-ts-web-compiler/pkg",
                "output": "assets/wasm"
              }
            ],
            "styles": ["src/themes/theme.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "6mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "13kb",
                  "maximumError": "15kb"
                }
              ],
              "outputHashing": "all",
              "serviceWorker": "ngsw-config.json",
              "optimization": true,
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "outputPath": "dist",
              "index": "src/index.html",
              "browser": "src/main.ts",
              "baseHref": "/"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            },
            "staging": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "6mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "13kb",
                  "maximumError": "15kb"
                }
              ],
              "outputHashing": "all",
              "serviceWorker": "ngsw-config.json",
              "optimization": true,
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.staging.ts"
                }
              ],
              "outputPath": "dist",
              "index": "src/index.html",
              "browser": "src/main.ts",
              "baseHref": "/"
            },
            "cloudflare": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "6mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "13kb",
                  "maximumError": "15kb"
                }
              ],
              "outputHashing": "all",
              "serviceWorker": "ngsw-config.json",
              "optimization": true,
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.cloudflare.ts"
                }
              ],
              "outputPath": "dist",
              "index": "src/index.html",
              "browser": "src/main.ts",
              "baseHref": "/"
            },
            "electron": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.electron.ts"
                }
              ],
              "outputPath": "dist/inkweld-frontend",
              "baseHref": "./"
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "inkweld-frontend:build:production"
            },
            "development": {
              "buildTarget": "inkweld-frontend:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "buildTarget": "inkweld-frontend:build:development",
            "tsConfig": "tsconfig.spec.json",
            "runner": "vitest",
            "runnerConfig": "vitest-base.config.ts",
            "setupFiles": ["setup-vitest.ts"],
            "coverage": true,
            "coverageInclude": ["src/**/*.ts"],
            "coverageExclude": [
              "**/*.spec.ts",
              "**/setup-vitest.ts",
              "**/e2e/**",
              "**/testing/**",
              "**/environments/**",
              "**/*.config.ts",
              "**/*.d.ts",
              "**/main.ts",
              "**/app.routes.ts",
              "**/api-client/**",
              "**/index.ts",
              "**/element-sync-provider.interface.ts",
              "**/correction-dto.extension.ts",
              "**/yjs-element-sync.provider.ts",
              "**/offline-sync.provider.ts",
              "**/tag.model.ts"
            ],
            "coverageReporters": ["text", "html", "lcov"],
            "coverageThresholds": {
              "statements": 79,
              "functions": 80,
              "lines": 80,
              "branches": 60
            }
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html", "e2e/**/*.ts"]
          }
        },
        "e2e": {
          "builder": "playwright-ng-schematics:playwright",
          "options": {
            "devServerTarget": "inkweld-frontend:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "inkweld-frontend:serve:production"
            }
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "packageManager": "bun",
    "schematicCollections": ["@angular-eslint/schematics"]
  },
  "schematics": {
    "@schematics/angular:component": {
      "type": "component"
    },
    "@schematics/angular:directive": {
      "type": "directive"
    },
    "@schematics/angular:service": {
      "type": "service"
    },
    "@schematics/angular:guard": {
      "typeSeparator": "."
    },
    "@schematics/angular:interceptor": {
      "typeSeparator": "."
    },
    "@schematics/angular:module": {
      "typeSeparator": "."
    },
    "@schematics/angular:pipe": {
      "typeSeparator": "."
    },
    "@schematics/angular:resolver": {
      "typeSeparator": "."
    }
  }
}
