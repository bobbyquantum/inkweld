{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.inkweld.app",
  "productName": "Inkweld",
  "copyright": "Copyright Â© 2025 Inkweld",
  "directories": {
    "output": "release",
    "buildResources": "electron/resources"
  },
  "files": [
    "dist-electron/**/*",
    "dist/inkweld-frontend/**/*",
    "public/icons/**/*"
  ],
  "extraMetadata": {
    "main": "dist-electron/main.js"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icons/android-chrome-512x512.png",
    "artifactName": "${productName}-${version}-win-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Inkweld"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/icons/android-chrome-512x512.png",
    "category": "public.app-category.productivity",
    "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
    "hardenedRuntime": true,
    "gatekeeperAssess": false
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icons",
    "category": "Office",
    "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
    "synopsis": "Collaborative creative writing platform",
    "description": "Inkweld is a collaborative creative writing platform for authors, screenwriters, and storytellers."
  },
  "publish": {
    "provider": "github",
    "owner": "bobbyquantum",
    "repo": "inkweld"
  }
}
