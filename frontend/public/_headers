# Cloudflare Pages headers for Angular SPA
# See: https://developers.cloudflare.com/pages/configuration/headers/

/*
  # Allow inline scripts and styles that Angular generates
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: blob: https:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https: wss:; media-src 'self' data: blob:; object-src 'none'; frame-ancestors 'self'; base-uri 'self'; form-action 'self'
  # Disable X-Frame-Options in favor of CSP frame-ancestors
  X-Frame-Options: SAMEORIGIN
  # Other security headers
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()

# Cache static assets aggressively
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# WASM files are pre-compressed with Brotli to fit under Cloudflare's 25MB limit
/assets/wasm/*.wasm
  Content-Encoding: br
  Content-Type: application/wasm
  Cache-Control: public, max-age=31536000, immutable

/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=31536000, immutable

# Don't cache the index.html, manifest, or service worker files (for updates)
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
/manifest.webmanifest
  Cache-Control: no-cache, no-store, must-revalidate
/ngsw.json
  Cache-Control: no-cache, no-store, must-revalidate
/ngsw-worker.js
  Cache-Control: no-cache, no-store, must-revalidate
