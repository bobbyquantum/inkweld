{
  "name": "worm-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "serve:prod": "ng serve --configuration production",
    "clean": "rimraf dist",
    "build": "ng build",
    "compress": "find dist -type f -exec brotli --best {} \\;",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "text:exp": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "analyze": "ng build --stats-json && esbuild-visualizer --metadata dist/worm-frontend/stats.json",
    "upgrade-angular": "ng update @angular/core@19 @angular/cli@19 @angular/material@19 @angular/cdk@19 --allow-dirty",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "19.1.5",
    "@angular/cdk": "19.1.3",
    "@angular/common": "19.1.5",
    "@angular/compiler": "19.1.5",
    "@angular/core": "19.1.5",
    "@angular/forms": "19.1.5",
    "@angular/material": "19.1.3",
    "@angular/platform-browser": "19.1.5",
    "@angular/platform-browser-dynamic": "19.1.5",
    "@angular/router": "19.1.5",
    "@angular/service-worker": "19.1.5",
    "nanoid": "5.0.9",
    "ngx-editor": "18.0.0",
    "rxjs": "7.8.1",
    "tslib": "2.8.1",
    "y-indexeddb": "9.0.12",
    "y-prosemirror": "1.2.15",
    "y-websocket": "2.1.0",
    "yjs": "13.6.23",
    "zone.js": "0.15.0"
  },
  "devDependencies": {
    "@angular-builders/jest": "19.0.0",
    "@angular-devkit/build-angular": "19.1.6",
    "@angular/build": "19.1.6",
    "@angular/cli": "19.1.6",
    "@angular/compiler-cli": "19.1.5",
    "@jest/globals": "29.7.0",
    "@playwright/test": "1.50.1",
    "@types/jest": "29.5.14",
    "angular-eslint": "19.0.2",
    "esbuild": "0.25.0",
    "esbuild-visualizer": "0.7.0",
    "eslint": "9.20.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.1.4",
    "fake-indexeddb": "6.0.0",
    "jest": "29.7.0",
    "jest-preset-angular": "^14.4.2",
    "playwright-ng-schematics": "^1.2.2",
    "prettier": "3.5.0",
    "ts-jest": "29.2.5",
    "typescript": "5.7.3",
    "typescript-eslint": "8.23.0"
  }
}
