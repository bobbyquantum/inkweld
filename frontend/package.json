{
  "name": "inkweld-frontend",
  "version": "0.1.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "serve:prod": "ng serve --configuration production",
    "clean": "rimraf dist",
    "build": "ng build",
    "compress": "node scripts/compress.js",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "analyze": "ng build --stats-json && esbuild-visualizer --metadata dist/inkweld-frontend/stats.json",
    "upgrade-angular": "ng update @angular/core@21 @angular/cli@21 @angular/material@21 @angular/cdk@21 --allow-dirty",
    "fix-angular-control-flow": "ng generate @angular/core:control-flow",
    "e2e": "npm run e2e:offline && npm run e2e:online",
    "e2e:offline": "playwright test --config=playwright.offline.config.ts",
    "e2e:online": "playwright test --config=playwright.online.config.ts",
    "e2e:offline:ui": "playwright test --config=playwright.offline.config.ts --ui",
    "e2e:online:ui": "playwright test --config=playwright.online.config.ts --ui",
    "e2e:offline:debug": "playwright test --config=playwright.offline.config.ts --debug",
    "e2e:online:debug": "playwright test --config=playwright.online.config.ts --debug",
    "e2e:ci": "npm run e2e:offline:ci && npm run e2e:online:ci",
    "e2e:offline:ci": "playwright test --config=playwright.offline.config.ts --reporter=list",
    "e2e:online:ci": "playwright test --config=playwright.online.config.ts --reporter=list",
    "e2e:prod": "ng build && cross-env E2E_MODE=prod npm run e2e:offline",
    "e2e:prod:ci": "ng build && cross-env E2E_MODE=prod npm run e2e:offline:ci",
    "e2e:screenshots": "playwright test --config=playwright.screenshots.config.ts",
    "e2e:wrangler": "playwright test --config=playwright.wrangler.config.ts",
    "e2e:wrangler:ui": "playwright test --config=playwright.wrangler.config.ts --ui",
    "e2e:wrangler:debug": "playwright test --config=playwright.wrangler.config.ts --debug",
    "e2e:cloudflare": "playwright test --config=playwright.cloudflare.config.ts",
    "e2e:cloudflare:ui": "playwright test --config=playwright.cloudflare.config.ts --ui"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "21.0.1",
    "@angular/cdk": "21.0.1",
    "@angular/common": "21.0.1",
    "@angular/compiler": "21.0.1",
    "@angular/core": "21.0.1",
    "@angular/forms": "21.0.1",
    "@angular/material": "21.0.1",
    "@angular/platform-browser": "21.0.1",
    "@angular/platform-browser-dynamic": "21.0.1",
    "@angular/router": "21.0.1",
    "@angular/service-worker": "21.0.1",
    "@progress/jszip-esm": "1.0.4",
    "@types/pdfmake": "^0.2.12",
    "angular-split": "20.0.0",
    "date-fns": "4.1.0",
    "fracticons": "^1.0.0",
    "lodash-es": "4.17.21",
    "nanoid": "5.1.6",
    "ngx-editor": "^19.0.0-beta.1",
    "ngx-image-cropper": "9.1.5",
    "pdfmake": "^0.2.20",
    "rxjs": "7.8.2",
    "tslib": "2.8.1",
    "y-indexeddb": "9.0.12",
    "y-prosemirror": "1.3.7",
    "y-websocket": "3.0.0",
    "yjs": "13.6.27"
  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "21.0.1",
    "@angular/compiler-cli": "21.0.1",
    "@playwright/test": "1.56.1",
    "@types/lodash-es": "4.17.12",
    "@types/node": "^24.10.1",
    "@vitest/coverage-istanbul": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "angular-eslint": "21.0.0",
    "cross-env": "10.1.0",
    "esbuild": "0.27.0",
    "esbuild-visualizer": "0.7.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.3.0",
    "eslint-plugin-vitest": "^0.5.4",
    "fake-indexeddb": "6.2.5",
    "http-server": "^14.1.1",
    "jsdom": "^27.2.0",
    "playwright-ng-schematics": "21.0.1",
    "prettier": "3.6.2",
    "rimraf": "6.1.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.47.0",
    "vitest": "^4.0.13",
    "vitest-mock-extended": "3.1.0"
  },
  "resolutions": {
    "prosemirror-commands": "1.7.1",
    "prosemirror-history": "1.4.1",
    "prosemirror-inputrules": "1.5.1",
    "prosemirror-keymap": "1.2.3",
    "prosemirror-model": "1.25.4",
    "prosemirror-schema-list": "1.5.1",
    "prosemirror-state": "1.4.4",
    "prosemirror-transform": "1.10.4",
    "prosemirror-view": "1.41.3"
  }
}
