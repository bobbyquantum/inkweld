{
  "name": "worm-bridge",
  "version": "1.0.0",
  "description": "Bridge server for Worm - handles YJS collaboration and proxying between frontend and backend",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "bun run tsc",
    "start": "bun run dist/server.js",
    "dev": "bun run tsc -w & bun run --watch dist/server.js",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,json}\"",
    "check": "npm run lint && npm run build",
    "test": "bun run jest",
    "lint:ci": "eslint ."
  },
  "dependencies": {
    "express": "4.21.2",
    "http-proxy-middleware": "3.0.3",
    "lodash.debounce": "4.0.8",
    "prosemirror-model": "1.24.0",
    "prosemirror-schema-basic": "1.2.3",
    "ws": "8.18.0",
    "y-prosemirror": "1.2.15",
    "y-websocket": "2.0.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^20.11.24",
    "@types/ws": "8.5.13",
    "eslint": "9.16.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.1.4",
    "prettier": "3.3.3",
    "prettier-eslint": "16.3.0",
    "typescript": "5.5.4",
    "typescript-eslint": "8.17.0",
    "jest": "29.7.0",
    "jest-preset-angular": "^14.4.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
